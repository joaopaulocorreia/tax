<div class='row my-3'>
  <h1>Proponents</h1>
</div>

<div class='row'>
  <div class='col col-12'>
    <ul class="nav nav-pills">
      <li class="nav-item">
        <%= link_to 'Proponent', proponent_path(@proponent), class: "nav-link #{active_menu('proponents')}" %>
      </li>
      <li class="nav-item">
        <%= link_to 'Address', proponent_address_path(@proponent), class: "nav-link #{active_menu('proponents/addresses')}" %>
