<%= render 'proponents/layout' do %>
  <div class='card'>
    <div class='card-header'>
      <h6>Edit</h6>
    </div>
    <div class='card-body'>
      <%= render 'proponents/form', record: @proponent, edit: true %>
    </div>
    <div class='card-footer d-flex justify-content-between'>
      <%= link_to 'Cancel', proponent_path(@proponent), class: 'btn btn-danger' %>
      <button type="submit" form="edit_<%= dom_id(@proponent) %>" class="btn btn-success">Save</button>
    </div>
  </div>
<% end %>
