<%= render 'proponents/layout' do %>
  <div class='card'>
    <div class='card-header'>
      <h6>Address</h6>
    </div>
    <div class='card-body'>
      <%= render 'proponents/addresses/form', address: @proponent.address, proponent_id: @proponent.id %>
    </div>
    <div class='card-footer d-flex justify-content-between'>
      <%= link_to 'Cancel', proponent_address_path(@proponent), class: 'btn btn-danger' %>
      <button type="submit" form="edit_<%= dom_id(@proponent.address) %>" class="btn btn-success">Save</button>
    </div>
  </div>
<% end %>
