<%= turbo_frame_tag :address do %>
  <div class='card'>
    <div class='card-header'>
      <h6>Address</h6>
    </div>
    <div class='card-body'>
      <%= render 'proponents/addresses/form', address: @proponent.address, proponent_id: @proponent.id, disabled: true %>
    </div>
    <div class='card-footer d-flex justify-content-end'>
      <%= link_to 'Edit', edit_proponent_address_path(@proponent), class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
