<%# locals: (records:) %>

<div class='card'>
  <div class='card-header'>
    <div class='d-flex justify-content-between align-items-center'>
      <h6>List</h6>
      <%= link_to 'New', new_proponent_path, class: 'btn btn-success' %>
    </div>
  </div>
  <div class='card-body'>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">CPF</th>
          <th scope="col">Birthday</th>
          <th scope="col">Salary</th>
          <th scope="col">Tax</th>
          <th scope="col">#</th>
        </tr>
      </thead>
      <tbody>
        <% records.each do |record| %>
          <tr>
            <th scope="row"><%= record.id %></th>
            <td><%= record.name %></td>
            <td><%= record.cpf %></td>
            <td><%= record.birthday %></td>
            <td><%= record.salary %></td>
            <td><%= record.tax %></td>
            <td><%= link_to 'View', proponent_path(record) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class='card-footer'>
    <%= render 'shared/pagination', records:, path: proponents_path %>
  </div>
</div>
