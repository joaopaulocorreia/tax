<%# locals: (contacts:) %>

<div class='card'>
  <div class="card-header">
    <h6>List</h6>
  </div>
  <div class='card-body'>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Phone</th>
          <th scope="col">Type</th>
          <th scope="col">#</th>
        </tr>
      </thead>
      <tbody>
        <% contacts.each do |contact| %>
          <%= next unless contact.id %>

          <tr>
            <th scope="row"><%= contact.id %></th>
            <td><%= contact.phone %></td>
            <td><%= contact.category %></td>
            <td>
              <%= link_to "Delete", proponent_contact_path(@proponent.id, contact.id), data: { "turbo-method": :delete, "turbo-confirm": "Are you sure about that?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class='card-footer'>
    <%= render 'shared/pagination', records: contacts, path: new_proponent_contact_path %>
  </div>
</div>
