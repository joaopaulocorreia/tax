<%# locals: (contacts:) %>

<div class='card'>
  <div class="card-header">
    <h6>List</h6>
  </div>
  <div class='card-body'>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Phone</th>
          <th scope="col">Type</th>
          <th scope="col">#</th>
        </tr>
      </thead>
      <tbody>
        <% contacts.each do |contact| %>
          <tr>
            <th scope="row"><%= contact.id %></th>
            <td><%= contact.phone %></td>
            <td><%= contact.category %></td>
            <td> <a href="">Remove</a> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
