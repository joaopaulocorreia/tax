<div class='row'>
  <h1>Dashboard</h1>
</div>

<div class='row mt-3'>
  <div class='col'>
    <div class='card'>
      <div class='card-header'>
        <h6>List</h6>
      </div>
      <div class='card-body'>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Description</th>
              <th scope="col">Proponents</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Até R$ 1.045,00</td>
              <td><%= @tags['group_one'] || 0 %></td>
            </tr>
            <tr>
              <td> De R$ 1.045,01 a R$ 2.089,60</td>
              <td><%= @tags['group_two'] || 0 %></td>
            </tr>
            <tr>
              <td> De R$ 2.089,61 até R$ 3.134,40</td>
              <td><%= @tags['group_three'] || 0 %></td>
            </tr>
            <tr>
              <td> De R$ 3.134,41 até R$ 6.101,06</td>
              <td><%= @tags['group_four'] || 0 %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class='card-footer'>
        Pagination
      </div>
    </div>
  </div>
</div>

<div>
  <canvas
      data-controller='chart'
      data-chart-one-value="<%= @tags['group_one'] %>"
      data-chart-two-value="<%= @tags['group_two'] %>"
      data-chart-three-value="<%= @tags['group_three'] %>"
      data-chart-four-value="<%= @tags['group_four'] %>"
      id="myChart" >
  </canvas>
</div>
